@using viramesV4.Object.BusinessLogicLayer.System
@model IList<Message>
@{
    ViewBag.Title = "inBoxMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Gelen Kutusu
    </h1>
    <div class="box-body ">
        <a class="btn btn-primary fa fa-paper-plane" href="/MessageManagement/newMessage">Mesaj Oluştur</a>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Mesajlar</h3>
                </div>
                <div class="box-body no-padding">
                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Gönderici</th>
                                    <th>Alıcı</th>
                                    <th>Konu</th>
                                    <th>Mesaj</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Message message in Model)
                                {
                                    <tr>
                                        <td>@message.Sender</td>
                                        <td>@message.Receiver</td>
                                        <td>@message.MessagePreview</td>
                                        <td>@message.Subject</td>
                                        <td>@message.Date</td>
                                        <td><a class="btn btn-primary fa fa-trash btn btn-danger" href="~/Views/MessageManagement/trash.cshtml/@message.ID"></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

