@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<Shift>
@{
    ViewBag.Title = "employeeShiftAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Personel Vardiya Atamaları
    </h1>
    <div class="box-body ">
        <button type="button" class="btn btn-primary">
            <span class=" fa fa-file"></span> Yeni
        </button>
        <button type="button" class="btn btn-primary">
            <span class=" fa fa-edit"></span> Düzenle
        </button>
        <button type="button" class="btn btn-primary">
            <span class=" fa fa-eye"></span> Görüntüle
        </button>
        <button type="button" class="btn btn-primary ">
            <span class=" fa fa-copy"></span> Kopyala
        </button>
        <button type="button" class="btn btn-primary">
            <span class=" fa fa-share-square"></span> Aktarım
        </button>
        <button type="button" class="btn btn-danger">
            <span class=" fa fa-trash"></span> Sil
        </button>
    </div>


</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Vardiya Kodu</th>
                                <th>Vardiya Tanımı</th>
                                <th>Vardiya Durumu</th>
                                <th>Başlangıç Günü</th>
                                <th>Bitiş Günü</th>
                                <th>Toplam Süre</th>
                                <th>Mola Sayısı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Shift shift in Model)
                            {
                            <tr>
                                <td>@shift.Code</td>
                                <td>@shift.Definition</td>
                                <td>@shift.Status</td>
                                <td>@shift.StartDay</td>
                                <td>@shift.EndDay</td>
                                <td>@shift.TotalTime</td>
                                <td>@shift.WorkingDay</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


