@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<Certificate>
@{
    ViewBag.Title = "employeeCertificateAppointmentAssigned";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h3>Personel Tanımları</h3>
    <div class="box-body ">
        <a class="btn btn-app btn btn-primary" onclick="goBack()">
            <i class="fa fa-arrow-left"></i> Geri
        </a>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Personel Sertifikaları</h3>
                </div>
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sertifika Kodu</th>
                                <th>Sertifika Tanımı</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Certificate certificate in Model)
                            {
                                <tr>
                                    <td>@certificate.Code</td>
                                    <td>@certificate.Definition</td>
                                    <td>@certificate.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

