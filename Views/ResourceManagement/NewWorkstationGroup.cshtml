@model viramesV4.Object.BusinessLogicLayer.Master.WorkstationGroup

@{
    ViewBag.Title = "newWorkstationGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h3>Yeni İş İstasyonu Havuzu</h3>
        <div class="box-body">
            <a class="btn btn-app btn btn-primary" onclick="goBack()">
                <i class="fa fa-arrow-left"></i> Geri
