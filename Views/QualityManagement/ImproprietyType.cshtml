
@{
    ViewBag.Title = "ImproprietyType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<ImproprietyType>


<section class="content-header">
    <h1>
        Uygunsuzluk Türü Tanımları

    </h1>

    <div class="box-body ">
        <button type="button" class="btn btn-primary">
            <span class=" fa fa-file"></span> Yeni
        </button>
        <button type="button" class="btn btn-primary">
            <span class=" fa fa-edit"></span> Düzenle
        </button>

        <button type="button" class="btn btn-primary">
            <span class=" fa fa-eye"></span> Görüntüle
        </button>

        <button type="button" class="btn btn-primary ">
            <span class=" fa fa-copy"></span> Kopyala
        </button>
        <button type="button" class="btn btn-primary">
            <span class=" fa fa-share-square"></span> Aktarım
        </button>
        <button type="button" class="btn btn-danger">
            <span class=" fa fa-trash"></span> Sil
        </button>
    </div>


    <ol class="breadcrumb">
        <li class="active">Uygunsuzluk Türü Tanımları</li>
    </ol>



</section>

<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-xs-12">



            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Uygunsuzluk Türü Kodu</th>
                                <th>Uygunsuzluk Türü Tanımı</th>
                                <th>İş Emri Durdurulsun</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ImproprietyType impropriety in Model)
                            {

                                <tr>
                                    <td>@impropriety.Code</td>
                                    <td>@impropriety.Definition</td>
                                    <td>
                                        @if (@impropriety.Stop == true)
                                        {
                                            <input type="checkbox" value="" checked>
                                        }
                                    @if (@impropriety.Stop == false)
                                    {
                                        <input type="checkbox" value="">
                                    }
                                </td>
                               

                            </tr>

                        }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Uygunsuzluk Türü Kodu</th>
                                <th>Uygunsuzluk Türü Tanımı</th>
                                <th>İş Emri Durdurulsun</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

