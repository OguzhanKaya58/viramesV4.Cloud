
@{
    ViewBag.Title = "project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<Project>


<section class="content-header">
  

   
        <div class="box-body">
            <a href="http://virames.cloud/ProductionPlanning/newProject" class="btn btn-app btn btn-primary">
                <i class="fa fa-file"></i> Yeni
            </a>
            <a class="btn btn-app">
                <i class="fa fa-share-square"></i>Aktarım
            </a>
        </div>


     


</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h2>
                        Proje Tanımları
                    </h2>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Proje Kodu</th>
                                <th>Proje Tanımı</th>
                                <th>Başlangıç Tarihi</th>
                                <th>Bitiş Tarihi</th>
                                <th>Özel Kod</th>
                                <th>İşlem</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Project project in Model)
                            {

                            <tr>
                                <td>@project.Code</td>
                                <td>@project.Definition</td>
                                <td>@project.StartDate</td>
                                <td>@project.EndDate</td>
                                <td>@project.SpeCode</td>
                                <td>
                                    <div class="dropdown btn-group dropleft">
                                        <button class="btn  btn-primary dropdown-toggle " type="button" id="dropdownMenuButton" data-toggle="dropdown">
                                            Seç
                                        </button>
                                        <div class="dropdown-menu">
                                            <a href="@Url.Action("detailProject", "ProductionPlanning", new { id = project.ID })"><span class="fa fa-eye"> Görüntüle </span></a> <br />
                                            <a href="@Url.Action("editProject", "ProductionPlanning", new { id = project.ID })"><span class="fa fa-edit"> Düzenle </span></a> <br />
                                            <a href="@Url.Action("deleteProject", "ProductionPlanning", new { id = project.ID })"><span class="fa fa-trash"> Sil </span></a> <br />
                                            <a href="@Url.Action("detailProjectDocument", "ProductionPlanning", new { id = project.ID })"><span class="fa fa-sitemap"> Döküman Yönetimi </span></a> <br />
                                        </div>

                                    </div>
                                </td>
                            </tr>

                            }
                        </tbody>
                       
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>



