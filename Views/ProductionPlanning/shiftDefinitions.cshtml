
@{
    ViewBag.Title = "shiftDefinitions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<Shift>


<section class="content-header">
    <h1>
        Vardiya Tanımlamaları

    </h1>

    <div class="box-body">

        <a href="http://virames.cloud/ProductionPlanning/newShiftDefinition" class="btn btn-app btn btn-primary">
            <i class="fa fa-file"></i> Yeni
        </a>


        <a class="btn btn-app">
            <i class="fa fa-share-square"></i>Aktarım
        </a>

    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-xs-12">



            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Vardiya Kodu</th>
                                <th>Vardiya Tanımı</th>
                                <th>Çalışma Günü</th>
                                <th>Başlangıç Günü</th>
                                <th>Bitiş Günü</th>
                                <th>Mola Sayısı</th>
                                <th>Toplam Süre</th>
                                <th>Vardiya Durumu</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Shift shiftDefinition in Model)
                            {

                            <tr>
                                <td>@shiftDefinition.Code</td>
                                <td>@shiftDefinition.Definition</td>
                                <td>@shiftDefinition.WorkingDay</td>
                                <td>@shiftDefinition.StartDay</td>
                                <td>@shiftDefinition.EndDay</td>
                                <td>@shiftDefinition.PauseCount</td>
                                <td>@shiftDefinition.TotalTime</td>
                                <td>@shiftDefinition.Status</td>
                                <td>
                                    <div class="dropdown btn-group dropleft">
                                        <button class="btn  btn-primary dropdown-toggle " type="button" id="dropdownMenuButton" data-toggle="dropdown">
                                            Seç
                                        </button>
                                        <div class="dropdown-menu">
                                            <a href="@Url.Action("detailShiftDefinition", "ProductionPlanning", new { id = shiftDefinition.ID })"><span class="fa fa-eye"> Görüntüle </span></a> <br />
                                            <a href="@Url.Action("editShiftDefinition", "ProductionPlanning", new { id = shiftDefinition.ID })"><span class="fa fa-edit"> Düzenle </span></a> <br />
                                            <a href="@Url.Action("deleteShiftDefinition", "ProductionPlanning", new { id = shiftDefinition.ID })"><span class="fa fa-trash"> Sil </span></a> <br />
                                        </div>

                                    </div>
                                </td>
                            </tr>

                            }
                        </tbody>
                        
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>







