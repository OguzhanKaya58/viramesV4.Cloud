
@{
    ViewBag.Title = "recipeSpecifiCodeDefinitions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<SpeCode>


<section class="content-header">
    <h1>
        Reçete Özel Kod İşlemleri

    </h1>

    <div class="box-body">
        <a href="http://virames.cloud/ProductionPlanning/newBOMSpeCode" class="btn btn-app btn btn-primary">
            <i class="fa fa-file"></i> Yeni
        </a>
        <a class="btn btn-app">
            <i class="fa fa-share-square"></i>Aktarım
        </a>

    </div>



</section>

<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-xs-12">



            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Özel Kod</th>
                                <th>Özel Kod Türü</th>
                                <th>Özel Kod Durumu</th>
                                <th>Yazı Rengi</th>
                                <th>Eğik Yazı</th>
                                <th>Kalın Yazı</th>
                                <th>Karakter Boyutu</th>
                                <th>Yazı Tipi Adı</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (SpeCode recipeSpeCode in Model)
                            {

                                <tr>
                                    <td>
                                        @if (recipeSpeCode.FontBold == false && recipeSpeCode.FontItalic == true)
                                        {
                                            <i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.SpecialCode</i>
                                        }
                                        else if (@recipeSpeCode.FontBold == true && @recipeSpeCode.FontItalic == false)
                                        {
                                            <strong><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.SpecialCode </strong>
                                        }
                                        else if (@recipeSpeCode.FontBold == true && @recipeSpeCode.FontItalic == true)
                                        {
                                            <strong><i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.SpecialCode</i></strong>
                                        }
                                        else
                                        {
                                            @recipeSpeCode.SpecialCode
                                        }
                                    </td>
                                    <td>
                                        @if (@recipeSpeCode.FontBold == false && @recipeSpeCode.FontItalic == true)
                                        {

                                            <i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.SpeCodeType</i>
                                        }
                                        else if (@recipeSpeCode.FontBold == true && @recipeSpeCode.FontItalic == false)
                                        {
                                            <b><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.SpeCodeType </b>
                                        }
                                        else if (@recipeSpeCode.FontBold == true && @recipeSpeCode.FontItalic == true)
                                        {
                                            <b><i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.SpeCodeType</i></b>
                                        }
                                        else
                                        {
                                            @recipeSpeCode.SpeCodeType
                                        }

                                    </td>
                                    <td>
                                        @if (@recipeSpeCode.FontItalic == true && @recipeSpeCode.FontBold == true)
                                        {
                                            <strong><i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.Status</i></strong>
                                        }
                                        else if (@recipeSpeCode.FontBold == true && @recipeSpeCode.FontItalic == false)
                                        {
                                            <strong> <p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.Status</strong>
                                        }
                                        else if (@recipeSpeCode.FontBold == false && @recipeSpeCode.FontItalic == true)
                                        {
                                            <i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.Status</i>
                                        }
                                        else
                                        {
                                            @recipeSpeCode.Status
                                        }
                                    </td>
                                    <td>
                                        @if (@recipeSpeCode.FontItalic == true && @recipeSpeCode.FontBold == true)
                                        {
                                            <strong><i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.FontColor</i></strong>
                                        }
                                        else if (@recipeSpeCode.FontBold == true && @recipeSpeCode.FontItalic == false)
                                        {
                                            <strong><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.FontColor</strong>
                                        }
                                        else if (@recipeSpeCode.FontBold == false && @recipeSpeCode.FontItalic == true)
                                        {
                                            <i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.FontColor</i>
                                        }
                                        else
                                        {
                                            @recipeSpeCode.FontColor
                                        }
                                    </td>
                                    <td>
                                        @if (@recipeSpeCode.FontItalic == true)
                                        {
                                            <input type="checkbox" value="" checked>
                                        }
                                        else
                                        {
                                            <input type="checkbox" value="">
                                        }
                                    </td>
                                    <td>
                                        @if (@recipeSpeCode.FontBold == true)
                                        {
                                            <input type="checkbox" value="" checked>
                                        }
                                        else
                                        {
                                            <input type="checkbox" value="">
                                        }

                                    </td>
                                    <td>
                                        @if (@recipeSpeCode.FontItalic == true && @recipeSpeCode.FontBold == true)
                                        {
                                            <strong><i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.FontSize</i></strong>
                                        }
                                        else if (@recipeSpeCode.FontBold == true && @recipeSpeCode.FontItalic == false)
                                        {
                                            <strong><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.FontSize</strong>
                                        }
                                        else if (@recipeSpeCode.FontBold == false && @recipeSpeCode.FontItalic == true)
                                        {
                                            <i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.FontSize</i>
                                        }
                                        else
                                        {
                                            @recipeSpeCode.FontSize
                                        }
                                    </td>
                                    <td>
                                        @if (@recipeSpeCode.FontItalic == true && @recipeSpeCode.FontBold == true)
                                        {
                                            <strong><i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.FontName</i></strong>
                                        }
                                        else if (@recipeSpeCode.FontBold == true && @recipeSpeCode.FontItalic == false)
                                        {
                                            <strong><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.FontName</strong>
                                        }
                                        else if (@recipeSpeCode.FontBold == false && @recipeSpeCode.FontItalic == true)
                                        {
                                            <i><p style="color: @recipeSpeCode.FontColor;">@recipeSpeCode.FontName</i>
                                        }
                                        else
                                        {
                                            @recipeSpeCode.FontName
                                        }
                                    </td>
                                    <td>
                                        <div class="dropdown btn-group dropleft">
                                            <button class="btn  btn-primary dropdown-toggle " type="button" id="dropdownMenuButton" data-toggle="dropdown">
                                                Seç
                                            </button>
                                            <div class="dropdown-menu">
                                                <a href="@Url.Action("detailBomSpeCode", "ProductionPlanning", new { id = recipeSpeCode.ID })"><span class="fa fa-eye"> Görüntüle </span></a> <br />
                                                <a href="@Url.Action("editBomSpeCode", "ProductionPlanning", new { id = recipeSpeCode.ID })"><span class="fa fa-edit"> Düzenle </span></a> <br />
                                                <a href="#" onclick="javascript:deleteRow('@recipeSpeCode.ID', '@recipeSpeCode.SpecialCode');"><span class="fa fa-trash"> Sil </span></a> <br />
                                            </div>

                                        </div>
                                    </td>
                                </tr>

                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<script>
    function deleteRow(id, name) {
        swal({
            title: "Silmek istediğinize emin misiniz?",
            text: "\"" + name + "\" özel kodlu kayıtı silecek misiniz?",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Sil",
            closeOnConfirm: false

        }, function () {
            swal("Silindi!", "İlgili kayıt silindi", "success");
            window.location.href = '/ProductionPlanning/deleteBomSpeCode/' + id;
            closeOnConfirm: true;

        });
    };
</script>



