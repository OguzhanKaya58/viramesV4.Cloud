@{
    /**/

    ViewBag.Title = "kanbanDashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@using viramesV4.Object.BusinessLogicLayer.Master
@using viramesV4.Object.HelperLayer
@model IList<Workorder>
<section class="content-header">
    <center>
        <h2>İş Emri Durumları</h2>
   </center>
    <hr >
</section>
<section class="content">
    <h3>Devam Ediyor</h3>
    <div class="row">
        @foreach (Workorder workorder in Model)
        {
            if (workorder.WorkOrderStatus == ProductOrderStatus.Started)
            {
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-yellow">
                        <div class="inner">
                            <p>@workorder.Material.CodeAndDefinition</p>
                            <p>@workorder.Warehouse</p>
                            <p>@workorder.Workstation.CodeAndDefinition</p>
                            <p align="right">@workorder.Number</p>
                            <h3 align="right">@workorder.Amount Adet</h3>
                        </div>
                        <div class="icon">
                            <i class="ion ion-ios-cog"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            }
        }
</div>
    <div class="row">

        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <h3>Bitirildi</h3>
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3></h3>
                    @foreach (Workorder workorder in Model)
                    {
                        if (workorder.WorkOrderStatus == ProductOrderStatus.Finished)
                        {
                            <p>@workorder.Warehouse</p>
                            <p>@workorder.Workstation.CodeAndDefinition</p>
                        }
                    }
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
   <h3>Tamamlandı</h3>
    <div class="row">
        @foreach (Workorder workorder in Model)
        {
            if (workorder.WorkOrderStatus == ProductOrderStatus.Completed)
            {
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-green">
                        <div class="inner">
                            <p>@workorder.Material.CodeAndDefinition</p>
                            <p>@workorder.Warehouse</p>
                            <p>@workorder.Workstation.CodeAndDefinition</p>
                            <p align="right">@workorder.Number</p>
                            <h3 align="right">@workorder.Amount Adet</h3>
                        </div>
                        <div class="icon">
                            <i class="ion ion-ios-cog"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            }
        }
    </div>
    <h3>Başlatılmadı</h3>
    <div class="row">
        @foreach (Workorder workorder in Model)
        {
            if (workorder.WorkOrderStatus == ProductOrderStatus.NotStarted)
            {
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-red">
                        <div class="inner">
                            <p>@workorder.Material.CodeAndDefinition</p>
                            <p>@workorder.Warehouse</p>
                            <p>@workorder.Workstation.CodeAndDefinition</p>
                            <p align="right">@workorder.Number</p>
                            <h3 align="right">@workorder.Amount Adet</h3>
                        </div>
                        <div class="icon">
                            <i class="ion ion-ios-cog"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            }
        }
    </div>
</section>
