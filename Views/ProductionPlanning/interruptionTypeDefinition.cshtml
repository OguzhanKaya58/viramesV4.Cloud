
@{
    ViewBag.Title = "interruptionTypeDefinition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<Interruption>
<section class="content-header">
    <h1> Duruş Türü Tanımları </h1>
    <div class="box-body">
        <a href="http://virames.cloud/ProductionPlanning/newinterruptionTypeDefinition" class="btn btn-app btn btn-primary">
            <i class="fa fa-file"></i> Yeni
        </a>
        <a class="btn btn-app">
            <i class="fa fa-share-square"></i>Aktarım
        </a>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Duruş Kodu</th>
                                <th>Duruş Tanımı</th>
                                <th>Durum</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Interruption interruptionType in Model)
                            {

                            <tr>
                                <td>@interruptionType.Code</td>
                                <td>@interruptionType.Definition</td>
                                <td>@interruptionType.Status</td>
                                <td>
                                    <div class="dropdown btn-group dropleft">
                                        <button class="btn  btn-primary dropdown-toggle " type="button" id="dropdownMenuButton" data-toggle="dropdown">
                                            Seç
                                        </button>
                                        <div class="dropdown-menu">
                                            <a href="@Url.Action("detailinterruptionTypeDefinition", "ProductionPlanning", new { id = interruptionType.ID })"><span class="fa fa-eye"> Görüntüle </span></a> <br />
                                            <a href="@Url.Action("editinterruptionTypeDefinition", "ProductionPlanning", new { id = interruptionType.ID })"><span class="fa fa-edit"> Düzenle </span></a> <br />
                                            <a href="@Url.Action("deleteinterruptionTypeDefinition", "ProductionPlanning", new { id = interruptionType.ID })"><span class="fa fa-trash"> Sil </span></a> <br />
                                        </div>

                                    </div>
                                </td>
                            </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>









