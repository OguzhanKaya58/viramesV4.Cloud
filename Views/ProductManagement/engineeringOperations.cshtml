
@{
    ViewBag.Title = "engineeringOperations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<Material>


<section class="content-header">

    <div class="box-body">
        <a class="btn btn-app btn btn-primary" href="~/ProductManagement/newMaterialDefinition">
            <i class="fa fa-file"></i> Yeni
        </a>
        <a class="btn btn-app">
            <i class="fa fa-share-square" data-toggle="modal" data-target="#ModalButton"></i> Aktarım
        </a>
        <div class="modal fade" id="ModalButton" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h3>Dışa Aktar</h3>
                    </div>
                    <div class="modal-body">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                            <label class="form-check-label" for="inlineRadio1">Text File (.txt)</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                            <label class="form-check-label" for="inlineRadio2">Excel File (.xlsx)</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
                            <label class="form-check-label" for="inlineRadio1">Html File (.txt)</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="option4">
                            <label class="form-check-label" for="inlineRadio2">PDF File (.pdf)</label>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Aktar</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h2>
                        Malzeme Kartları

                    </h2>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Malzeme Türü Tanımı</th>
                                <th>Malzeme Kodu</th>
                                <th>Malzeme Tanımı</th>
                                <th>Miktarı</th>
                                <th>Ana Birim</th>
                                <th>Malzeme Özelliği</th>
                                <th>İzleme Türü</th>
                                <th>Özel Kod</th>
                                <th>Malzeme Durumu</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Material material in Model)
                            {

                                <tr>
                                    <td>@material.MaterialType.Definition</td>
                                    <td>@material.Code</td>
                                    <td>@material.Definition</td>
                                    <td>@material.OnHand</td>
                                    <td>@material.MainUnit</td>
                                    <td>@material.MaterialSpecification</td>
                                    <td>@material.TraceType</td>
                                    <td>@material.SpeCode</td>
                                    <td>@material.Status</td>
                                    <td>
                                        <div class="dropdown btn-group dropleft">
                                            <button class="btn  btn-primary dropdown-toggle " type="button" id="dropdownMenuButton" data-toggle="dropdown">
                                                Seç
                                            </button>
                                            <div class="dropdown-menu">
                                                <a href="@Url.Action("detailMaterialDefinition", "ProductManagement", new { id = material.ID })"><span class="fa fa-eye"> Görüntüle </span></a> <br />
                                                <a href="@Url.Action("editMaterialDefinition", "ProductManagement", new { id = material.ID })"><span class="fa fa-edit"> Düzenle </span></a> <br />
                                                <a href="@Url.Action("detailMaterialFiche", "ProductManagement", new { id = material.ID })"><span class="fa fa-receipt"> Reçete Listesi </span></a> <br />
                                                <a href="@Url.Action("detailCriteriaSet", "ProductManagement", new { id = material.ID })"><span class="fa fa-tasks"> Kriter Setleri </span></a> <br />
                                                <a href="@Url.Action("detailDocumentManagement", "ProductManagement", new { id = material.ID })"><span class="fa fa-sitemap"> Döküman Yönetimi </span></a> <br />
                                                <a href="@Url.Action("deleteMaterialDefinition", "ProductManagement", new { id = material.ID })"><span class="fa fa-trash"> Sil </span></a> <br />

                                            </div>

                                        </div>
                                    </td>
                                </tr>

                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


