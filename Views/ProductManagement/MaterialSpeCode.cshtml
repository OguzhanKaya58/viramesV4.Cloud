
@{
    ViewBag.Title = "materialSpeCode";
}
@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<SpeCode>


<section class="content-header">
    <div class="box-body">
       
        <a class="btn btn-app btn btn-primary">
            <i class="fa fa-file"></i> Yeni
        </a>
        <a class="btn btn-app">
            <i class="fa fa-share-square"></i> Aktarım
        </a>
       

    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h2> Malzeme Özel Kod İşlemleri</h2>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Özel Kod</th>
                                <th>Özel Kod Türü</th>
                                <th>Özel Kod Durumu</th>
                                <th>Yazı Rengi</th>
                                <th>Eğik Yazı</th>
                                <th>Kalın Yazı</th>
                                <th>Karakter Boyutu</th>
                                <th>Yazı Tipi Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (SpeCode materialSpeCode in Model)
                            {

                                <tr>
                                    <td>
                                        @if (@materialSpeCode.FontBold == false && @materialSpeCode.FontItalic == true)
                                        {
                                        <i>@materialSpeCode.SpecialCode</i>
                                        }
                                        else if (@materialSpeCode.FontBold == true && @materialSpeCode.FontItalic == false)
                                        {
                                        <strong>@materialSpeCode.SpecialCode </strong>
                                        }
                                        else if (@materialSpeCode.FontBold == true && @materialSpeCode.FontItalic == true)
                                        {
                                            <strong><i>@materialSpeCode.SpecialCode</i></strong>
                                        }
                                        else
                                        {
                                            @materialSpeCode.SpecialCode
                                        }
                                    </td>
                                    <td>
                                        @if (@materialSpeCode.FontBold == false && @materialSpeCode.FontItalic == true)
                                        {

                                            <i>@materialSpeCode.SpeCodeType</i>
                                        }
                                        else if (@materialSpeCode.FontBold == true && @materialSpeCode.FontItalic == false)
                                        {
                                            <b>@materialSpeCode.SpeCodeType </b>
                                        }
                                        else if (@materialSpeCode.FontBold == true && @materialSpeCode.FontItalic == true)
                                        {
                                            <b><i>@materialSpeCode.SpeCodeType</i></b>
                                        }
                                        else
                                        {
                                            @materialSpeCode.SpeCodeType
                                        }
                                      
                                    </td>
                                    <td>
                                        @if (@materialSpeCode.FontItalic == true && @materialSpeCode.FontBold == true)
                                        {
                                            <strong><i>@materialSpeCode.Status</i></strong>
                                        }
                                        else if (@materialSpeCode.FontBold == true && @materialSpeCode.FontItalic == false)
                                        {
                                            <strong> @materialSpeCode.Status</strong>
                                        }
                                        else if (@materialSpeCode.FontBold == false && @materialSpeCode.FontItalic == true)
                                        {
                                            <i>@materialSpeCode.Status</i>
                                        }
                                        else
                                        {
                                            @materialSpeCode.Status
                                        }
                                    </td>
                                    <td>
                                        @if (@materialSpeCode.FontItalic == true && @materialSpeCode.FontBold == true)
                                        {
                                            <strong><i>@materialSpeCode.FontColor</i></strong>
                                        }
                                        else if (@materialSpeCode.FontBold == true && @materialSpeCode.FontItalic == false)
                                        {
                                            <strong>@materialSpeCode.FontColor</strong>
                                        }
                                        else if (@materialSpeCode.FontBold == false && @materialSpeCode.FontItalic == true)
                                        {
                                            <i>@materialSpeCode.FontColor</i>
                                        }
                                        else
                                        {
                                            @materialSpeCode.FontColor
                                        }
                                    </td>
                                    <td>
                                        @if (@materialSpeCode.FontItalic == true)
                                        {
                                            <input type="checkbox" value="" checked>
                                        }
                                        else
                                        {
                                            <input type="checkbox" value="">
                                        }
                                    </td>
                                    <td>
                                        @if (@materialSpeCode.FontBold == true)
                                        {
                                            <input type="checkbox" value="" checked>
                                        }
                                        else
                                        {
                                            <input type="checkbox" value="">
                                        }

                                    </td>
                                    <td>@materialSpeCode.FontSize</td>
                                    <td>@materialSpeCode.FontName</td>

                                </tr>

                            }
                        </tbody>
                      
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

