@model viramesV4.Object.BusinessLogicLayer.Master.MaterialFiche

@{
    ViewBag.Title = "detailSalesFiche";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">

    <div class="box-body ">
        <a class="btn btn-app btn btn-primary" onclick="goBack()">
            <i class="fa fa-arrow-left"></i> Geri
        </a>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">

                    <div class="box-body">
                        <h3>Satış İrsaliyesi</h3>
                        <hr />
                    </div>
                    <div class="col-lg-4">
                        <center> <h3>Başlık Bilgileri</h3></center>
                        <dl class="dl-horizontal">


                            <dt>
                                @Html.DisplayNameFor(model => model.Type)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Type)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Number)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Number)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ERPReference)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ERPReference)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Date)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Date)
                            </dd>
                            
                        </dl>
                    </div>
                    <div class="col-lg-4">
                        <center><h3>Detay Bilgileri</h3></center>
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.FicheApprove)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.FicheApprove)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Warehouse.WarehouseName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Warehouse.WarehouseName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.SpeCode.SpecialCode)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.SpeCode.SpecialCode)
                            </dd>

                        </dl>
                    </div>
                    <div class="col-lg-4">
                        <center><h3>Ürün Bilgileri</h3></center>
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.Account.CodeAndDefinition)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Account.CodeAndDefinition)
                            </dd>
                          
                            <dt>
                                @Html.DisplayNameFor(model => model.Workorder)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Workorder)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Employee.Name)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Employee.Name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Project.Code)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Project.Code)
                            </dd>
                           


                        </dl>
                    </div>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Kart Rengi</th>
                                <th>Malzeme Türü</th>
                                <th>Malzeme</th>
                                <th>Miktar</th>
                                <th>Birim</th>
                                <th>Fiyat</th>
                                <th>Toplam</th>
                                <th>İzleme Numarası</th>
                                <th>Raf Konumu</th>
                                <th>Kalite Kontrol Durumu</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Lines)
                            {

                                <tr>
                                    <td></td>
                                    <td>

                                        @Html.DisplayFor(model => item.MaterialType.Definition)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(model => item.Material.CodeAndDefinition)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(model => item.Material.OnHand)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(model => item.Unit.Unit)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(model => item.Price)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(model => item.Total)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(model => item.TraceNumber)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(model => item.ShelfLocation.LocationOfShelf)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(model => item.QualityControl)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <br />
                </div>

            </div>
        </div>
    </div>
</section>

