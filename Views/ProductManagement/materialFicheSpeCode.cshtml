
@{
    ViewBag.Title = "materialFicheSpeCode";
}
@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<SpeCode>


<section class="content-header">
  
    <div class="box-body">
        
        <a class="btn btn-app btn btn-primary">
            <i class="fa fa-file"></i> Yeni
        </a>
        <a class="btn btn-app">
            <i class="fa fa-share-square"></i>Aktarım
        </a>
    
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-xs-12">
           <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    <h2> Malzeme Fişleri Özel Kod İşlemleri</h2>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Özel Kod</th>
                                <th>Özel Kod Türü</th>
                                <th>Özel Kod Durumu</th>
                                <th>Yazı Rengi</th>
                                <th>Eğik Yazı</th>
                                <th>Kalın Yazı</th>
                                <th>Karakter Boyutu</th>
                                <th>Yazı Tipi Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (SpeCode materialFicheSpeCode in Model)
                            {

                                <tr>
                                    <td>
                                        @if (@materialFicheSpeCode.FontItalic == true)
                                        {
                                        <b> <i>@materialFicheSpeCode.SpecialCode</i></b>

                                        }
                                        else
                                        {
                                            @materialFicheSpeCode.SpecialCode
                                        }
                                    </td>
                                    <td>
                                        @if (@materialFicheSpeCode.FontItalic == true)
                                        {
                                             <strong> <i>@materialFicheSpeCode.SpeCodeType</i></strong>

                                        }
                                        else
                                        {
                                            @materialFicheSpeCode.SpeCodeType
                                        }
                                    </td>
                                    <td>
                                        @if (@materialFicheSpeCode.FontItalic == true)
                                        {
                                            <strong> <i>@materialFicheSpeCode.Status</i></strong>

                                        }
                                        else
                                        {
                                            @materialFicheSpeCode.Status
                                        }
                                    </td>
                                    <td>
                                        @if (@materialFicheSpeCode.FontItalic == true)
                                        {
                                            <strong> <i>@materialFicheSpeCode.FontColor</i></strong>

                                        }
                                        else
                                        {
                                            @materialFicheSpeCode.FontColor
                                        }
                                    </td>
                                    <td>
                                        @if (@materialFicheSpeCode.FontItalic == true)
                                        {
                                            <input type="checkbox" value="" checked>
                                            
                                        }
                                        else
                                        {
                                            <input type="checkbox" value="">
                                        }
                                    </td>
                                    <td>
                                        @if (@materialFicheSpeCode.FontBold == true)
                                        {
                                            <input type="checkbox" value="" checked>
                                        }
                                        else
                                        {
                                            <input type="checkbox" value="">
                                        }

                                    </td>
                                    <td>
                                        @if (@materialFicheSpeCode.FontItalic == true)
                                        {
                                            <strong> <i>@materialFicheSpeCode.FontSize</i></strong>

                                        }
                                        else
                                        {
                                            @materialFicheSpeCode.FontSize
                                        }
                                    </td>
                                    <td>
                                        @if (@materialFicheSpeCode.FontItalic == true)
                                        {
                                            <strong> <i>@materialFicheSpeCode.FontName</i></strong>

                                        }
                                        else
                                        {
                                            @materialFicheSpeCode.FontName
                                        }
                                    </td>

                                </tr>

                            }
                        </tbody>
                       
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>



