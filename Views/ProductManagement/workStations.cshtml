
@{
    ViewBag.Title = "workStations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<Workstation>

<section class="content-header">

    <div class="box-body">
        <a class="btn btn-app btn btn-primary" href="~/ProductManagement/materialDefinitions"> <span class=" fa fa-backward"></span>Geri</a>

    </div>

</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h2>
                        Dökümana Atanan Kayıtlar

                    </h2>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <h2> İş İstasyonları </h2>
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>İş İstasyonu Kodu</th>
                                <th>İş İstasyonu Tanımı</th>
                                <th>İş İstasyonu Durumu</th>
                                <th>Tahsis Edilebilir Kullanım Kapasitesi</th>
                                <th>Konum</th>
                                <th>Maaliyet</th>
                                <th>Tarih Periyodik Bakımı</th>
                                <th>Periyodik Bakım Sayısı</th>
                                <th>Gerçekleşen Son Periyodik Bakım Tarihi</th>
                                <th>Mevcut Periyodik Bakım Sayacı</th>
                                <th>Aktif Personel Sayısı</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Workstation material in Model)
                            {

                            <tr>
                                <td>@material.Code</td>
                                <td>@material.Definition</td>
                                <td>@material.Status</td>
                                <td>@material.AllocableCapacity</td>
                                <td>@material.Location</td>
                                <td>@material.Cost</td>
                                <td>@material.DatePeriodicMaintenance</td>
                                <td>@material.CountPeriodicMaintenance</td>
                                <td>@material.LastPeriodicMaintenanceDate</td>
                                <td>@material.CurrentPeriodicMaintanceCount</td>
                                <td>@material.ActiveEmployeeCount</td>


                            </tr>

                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


