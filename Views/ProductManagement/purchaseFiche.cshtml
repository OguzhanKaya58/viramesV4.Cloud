
@{
    ViewBag.Title = "purchaseFiche";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<MaterialFiche>


<section class="content-header">
    
    <div class="box-body">
        <a href="http://virames.cloud/ProductManagement/newPurchaseFiche"  class="btn btn-app btn btn-primary">
            <i class="fa fa-file"></i> Yeni
        </a>
        <a class="btn btn-app">
            <i class="fa fa-share-square"></i>Aktarım
        </a>
       
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-xs-12">



            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h2>  Satın Alma İrsaliyeleri</h2>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Numarası</th>
                                <th>Tarih</th>
                                <th>Türü</th>
                                <th>Bilgi Notu</th>
                                <th>İrsaliye Numarası</th>
                                <th>Depo</th>
                                <th>Depo Girdi</th>
                                <th>Personel</th>
                                <th>İş Emri</th>
                                <th>Cari Hesap</th>
                                <th>Özel Kod</th>
                                <th>Barkod Durum</th>
                                <th>Onay Durumu</th>
                                <th>Malzeme Fiş Durumu</th>
                                <th>Satın Alma Siparişi</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MaterialFiche material in Model)
                            {

                            <tr>
                                <td>@material.Number</td>
                                <td>@material.Date</td>
                                <td>@material.Type</td>
                                <td>@material.InformationNote</td>
                                <td>@material.DispatchNumber</td>
                                <td>@material.Warehouse</td>
                                <td>@material.InputWarehouse</td>
                                <td>@material.Employee</td>
                                <td>@material.Workorder</td>
                                <td>@material.Account</td>
                                <td>@material.SpeCode</td>
                                <td>@material.BarcodeStatus</td>
                                <td>@material.FicheApprove</td>
                                <td>@material.MaterialFicheStatus</td>
                                <td>@material.PurchaseOrder</td>
                                <td>
                                    <div class="dropdown btn-group dropleft">
                                        <button class="btn  btn-primary dropdown-toggle " type="button" id="dropdownMenuButton" data-toggle="dropdown">
                                            Seç
                                        </button>
                                        <div class="dropdown-menu">
                                           <a href="@Url.Action("detailPurchaseFiche", "ProductManagement", new { id = material.ID })"><span class="fa fa-eye"> Görüntüle </span> </a><br />
                                            <a href="@Url.Action("editPurchaseFiche", "ProductManagement", new { id = material.ID })"><span class="fa fa-edit"> Düzenle </span></a> <br />

                                            @*<a href="@Url.Action("detailMaterialFiche", "ProductManagement", new { id = material.ID })"></a>*@<span class="fa fa-receipt"> Reçete Listesi </span> <br />
                                            @*<a href="@Url.Action("detailCriteriaSet", "ProductManagement", new { id = material.ID })"></a>*@<span class="fa fa-tasks"> Kriter Setleri </span> <br />
                                            @*<a href="@Url.Action("detailDocumentManagement", "ProductManagement", new { id = material.ID })"></a>*@<span class="fa fa-sitemap"> Döküman Yönetimi </span> <br />
                                            <a href="@Url.Action("deletePurchaseFiche", "ProductManagement", new { id = material.ID })"><span class="fa fa-trash"> Sil </span></a> <br />

                                        </div>

                                    </div>
                                </td>
                            </tr>

                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Numarası</th>
                                <th>Tarih</th>
                                <th>Türü</th>
                                <th>Depo</th>
                                <th>Depo Girdi</th>
                                <th>Personel</th>
                                <th>İş Emri</th>
                                <th>Cari Hesap</th>
                                <th>Özel Kod</th>
                                <th>Barkod Durum</th>
                                <th>Onay Durumu</th>
                                <th>Malzeme Fiş Durumu</th>
                                <th>Satın Alma Siparişi</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>