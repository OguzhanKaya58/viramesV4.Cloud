
@{
    ViewBag.Title = "detailDocumentManagement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using viramesV4.Object.BusinessLogicLayer.Master
@model IList<Document>

<section class="content-header">
   

    <div class="box-body">
        <a class="btn btn-app btn btn-primary" onclick="goBack()">
            <i class="fa fa-arrow-left"></i> Geri
        </a>
        <a class="btn btn-app " href="~/ProductManagement/materialDefinitions"> <span class=" fa fa-share-square"></span>Aktarım</a>
    </div>

</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h2>
                       Malzeme Dökümanları

                    </h2>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Döküman No</th>
                                <th>Döküman Açıklaması</th>
                                <th>Proje</th>
                                <th>Aile No</th>
                                <th>Sayfa</th>
                                <th>Sayfa Sayısı</th>
                                <th>Revizyon</th>
                                <th>Geçerlilik</th>
                                <th>Durum</th>
                                <th>Departman Kapsamı</th>
                                <th>İşlem</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Document document in Model)
                            {

                            <tr>
                                <td>@document.DocumentNo</td>
                                <td>@document.Description</td>
                                <td>@document.Project</td>
                                <td>@document.FamilyNo</td>
                                <td>@document.Page</td>
                                <td>@document.PageCount</td>
                                <td>@document.Rev</td>
                                <td>@document.Availability</td>
                                <td>@document.Status </td>
                                <td>@document.DepartmentScope</td>
                                <td>
                                    <div class="dropdown btn-group dropleft">
                                        <button class="btn  btn-primary dropdown-toggle " type="button" id="dropdownMenuButton" data-toggle="dropdown">
                                            Seç
                                        </button>
                                        <div class="dropdown-menu">
                                            <a  href="@Url.Action("detailDocument", "ProductManagement", new { id = document.ID })">
                                                <span class="fa fa-eye"> Görüntüle </span>
                                            </a>
                                            <a href="@Url.Action("detailMaterialFiche", "ProductManagement", new { id = document.ID })"><span class="fa fa-folder-open"> Dosya Aç </span></a>
                                        </div>

                                    </div>
                                     
                                    <div class="dropdown btn-group dropleft">
                                        <button class="btn  btn-primary dropdown-toggle " type="button" id="dropdownMenuButton" data-toggle="dropdown">
                                            Dökümana Atanan Kayıtlar
                                        </button>
                                        <div class="dropdown-menu">
                                            <a href="@Url.Action("detailDocumentRecord", "ProductManagement", new { id = document.ID })"><span class="fa fa-eye"> Malzeme </span></a> <br />
                                            <a href="@Url.Action("receipts", "ProductManagement", new { id = document.ID })"><span class="fa fa-folder-open"> Reçeteler </span></a> <br />
                                            <a href="@Url.Action("detailFiche", "ProductManagement", new { id = document.ID })"><span class="fa fa-receipt"> Malzeme Fişleri </span></a> <br />
                                            <a href="@Url.Action("detailEmployee", "ProductManagement", new { id = document.ID })"><span class="fa fa-users"> Personeller </span></a> <br />
                                            <a href="@Url.Action("project", "ProductManagement", new { id = document.ID })"><span class="fa fa-files-o"> Projeler </span></a> <br />
                                            <a href="@Url.Action("productOrders", "ProductManagement", new { id = document.ID })"><span class="fa fa-files-o"> Üretim Emirleri </span></a> <br />
                                            <a href="@Url.Action("workStations", "ProductManagement", new { id = document.ID })"><span class="fa fa-files-o"> İş İstasyonları </span></a> <br />
                                            <a href="@Url.Action("purchaseContracts", "ProductManagement", new { id = document.ID })"><span class="fa fa-files-o"> Satınalma Sözleşmeleri </span></a> <br />
                                            <a href="@Url.Action("purchaseIndents", "ProductManagement", new { id = document.ID })"><span class="fa fa-files-o"> Satınalma Emirleri </span></a> <br />
                                            <a href="@Url.Action("purchaseOrders", "ProductManagement", new { id = document.ID })"><span class="fa fa-files-o"> Satınalma Siparişleri </span></a> <br />
                                            <a href="@Url.Action("purchaseProposal", "ProductManagement", new { id = document.ID })"><span class="fa fa-files-o"> Satınalma Teklifleri </span></a> <br />
                                            <a href="@Url.Action("certificates", "ProductManagement", new { id = document.ID })"><span class="fa fa-files-o"> Sertifikalar </span></a> <br />
                                        </div>

                                    </div>
                                </td>
                            </tr>

                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>




