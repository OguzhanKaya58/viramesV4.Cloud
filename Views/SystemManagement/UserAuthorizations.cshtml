@using viramesV4.Object.BusinessLogicLayer.System
@model IList<UserAuthorization>
@{
    ViewBag.Title = "userAuthorizations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Kullanıcı Yetkilendirme
    </h1>
    <div class="box-body ">
        <button type="button" class="btn btn-primary">
            <span class=" fa fa-edit"></span> Düzenle
        </button>
        <button type="button" class="btn btn-primary">
            <span class=" fa fa-eye"></span> Görüntüle
        </button>
        <button type="button" class="btn btn-primary ">
            <span class=" fa fa-trash"></span> Kullanıcı Yetkilerini Sil
        </button>
        <button type="button" class="btn btn-primary ">
            <span class=" fa fa-copy"></span> Kullanıcı Yetkilerini Kopyala
        </button>
        <button type="button" class="btn btn-primary">
            <span class=" fa fa-share-square"></span> Aktarım
        </button>
    </div>


</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Kullanıcı Rolü</th>
                                <th>Kullanıcı Adı</th>
                                <th>İsim Soyisim</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserAuthorization userAuthorization in Model)
                            {
                                <tr>
                                    <td>@userAuthorization.Authorization</td>
                                    <td>@userAuthorization.User.Name</td>
                                    <td>@userAuthorization.User</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
